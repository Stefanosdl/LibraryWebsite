<% include ./partials/header %>

<% if(currentUser.userType === "student"){ %>
  <% include ./partials/studentNav %>
<% } else if(currentUser.userType === "provider"){ %>
  <% include ./partials/providerNav %>
<% } %>


<div class="row path">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb arr-right">
        <li class="breadcrumb-item"><a href="/">Αρχική Σελίδα</a></li>
        <li class="breadcrumb-item active" aria-current="page">Προφίλ</li>
      </ol>
    </nav>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center ">Επεξεργασία προφίλ</h4>
            </div>
              <div class="card-body">
                <form action="/profile/?_method=PUT" method="POST">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Όνομα</label>
                                <textarea rows="1" class="form-control" name="user[firstname]" value="<%= user.firstname %>"><%= user.firstname %></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Επώνυμο</label>
                                <textarea rows="1" class="form-control" name="user[lastname]" value="<%= user.lastname %>"><%= user.lastname %></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <textarea rows="1" class="form-control" name="username" value="<%= user.username %>"><%= user.username %></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Τηλέφωνο</label>
                                <textarea rows="1" class="form-control" name="user[tel]" value="<%= user.tel %>"><%= user.tel %></textarea>
                            </div>
                        </div>
                    </div>
                    <% if(currentUser.userType === "student") { %>
                      <div class="form-row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label>Πανεπιστήμιο</label>
                                  <textarea rows="1" class="form-control" name="user[university]" value="<%= user.university %>"><%= user.university %></textarea>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label>Τμήμα</label>
                                  <textarea rows="1" class="form-control" name="user[department]" value="<%= user.department %>"><%= user.department %></textarea>
                              </div>
                          </div>
                      </div>
                    <% } else if(currentUser.userType === "provider") { %>
                      <div class="form-row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label>Οδός-Αριθμός</label>
                                  <textarea rows="1" class="form-control" name="user[address]" value="<%= user.address %>"><%= user.address %></textarea>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label>Νομός</label>
                                  <textarea rows="1" class="form-control" name="user[county]" value="<%= user.county %>"><%= user.county %></textarea>
                              </div>
                          </div>
                      </div>
                      <div class="form-row">
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label>Τ.Κ.</label>
                                  <textarea rows="1" class="form-control" name="user[zip]" value="<%= user.zip %>"><%= user.zip %></textarea>
                              </div>
                          </div>
                          <div class="col-md-6">
                              <div class="form-group">
                                  <label>Πόλη</label>
                                  <textarea rows="1" class="form-control" name="user[city]" value="<%= user.city %>"><%= user.city %></textarea>
                              </div>
                          </div>
                      </div>
                    <% } %>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Νέος Κωδικός</label>
                                <p><span class="text-muted">Εισάγετε νέο κωδικό</span></p>
                                <textarea rows="1" class="form-control" type="password" name="password"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-info btn-fill btn-wd">Ενημέρωση Στοιχείων</button>
                    </div>
                </form>
        </div>
        </div>
    </div>
  </div>




</div>

<% include ./partials/footer %>

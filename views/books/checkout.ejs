<% layout("layouts/boilerplate")%>

<div class="container">
	<div class="py-5 text-center">
	  <h1>Καλάθι</h1>
	</div>
	<form action="/books/checkout/:id" method="POST" class="validated-form" novalidate>
		<div class="row g-5">
			<div class="col-md-5 col-lg-4 order-md-last">
				<h4 class="d-flex justify-content-between align-items-center mb-3">
				  <span class="text-primary">Το καλάθι σας</span>
				</h4>

				<div class="card justify-content-between align-items-center mb-3">
					<div class="row g-0">
						<div class="col-md-4">
							<img class="img-fluid rounded mx-auto d-block" alt="Responsive image" src="<%=book.image%>">
						</div>  
						<div class="col-md-8">
							<h5 class="card-header"><%= book.title %> </h5>
							<ul class="list-group list-group-flush">
								<li class="list-group-item"><%= book.author %></li>
								<li class="list-group-item">Εκδότης: <%= book.publisher %></li>
								<li class="list-group-item">ISBN: <%= book.isbn %></li>
								<li class="list-group-item d-flex justify-content-between lh-sm">
									<h6 class="my-0">Σύνολο:</h6>
									<label for="price" class="form-label"></label>
									<input class="form-control" id="price" name="price" value="<%= book.price %>" hidden>
									<a name="price" value="<%= book.price %>"><strong> <%= book.price %>€</strong></a>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<hr class="my-4">

				<button class="w-100 btn btn-primary btn-lg" type="submit">Πληρωμή</button>
			</div>

			<div class="col-md-7 col-lg-8">
				<h4 class="mb-3">Στοιχεία διεύθυνσης αποστολής</h4>
				<div class="row g-3">
					<div class="col-sm-6">
						<label for="firstname" class="form-label">Όνομα</label>
						<input type="text" class="form-control" id="firstname" name="firstname" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-sm-6">
						<label for="lastname" class="form-label">Επώνυμο</label>
						<input type="text" class="form-control" id="lastname" name="lastname" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-12">
						<label for="email" class="form-label">Email</label>
						<input type="email" class="form-control" id="email" name="username" placeholder="you@example.com" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-12">
						<label for="address" class="form-label">Νομός</label>
						<input type="text" class="form-control" id="address" placeholder="Αττική" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-12">
						<label for="address" class="form-label">Πόλη</label>
						<input type="text" class="form-control" id="address" placeholder="Πειραιάς" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-8">
						<label for="address" class="form-label">Διεύθυνση</label>
						<input type="text" class="form-control" id="address" placeholder="Κάπου 12" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-md-4">
						<label for="zip" class="form-label">Τ.Κ.</label>
						<input type="text" class="form-control" id="zip" placeholder="12345" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>
				</div>

				<hr class="my-4">

				<h4 class="mb-3">Τρόπος πληρωμής</h4>
				<small class="text-muted">Υποστηρίζεται μόνο ηλεκτρονική πληρωμή</small>

				<div class="my-3">
					<div class="form-check">
						<input id="credit" type="radio" class="form-check-input" checked required>
						<label class="form-check-label" for="credit">Χρεωστική κάρτα</label>
					</div>
					<div class="form-check">
						<input id="debit" type="radio" class="form-check-input" required>
						<label class="form-check-label" for="debit">Πιστωτική κάρτα</label>
					</div>
					<div class="form-check">
						<input id="paypal" type="radio" class="form-check-input" required>
						<label class="form-check-label" for="paypal">PayPal</label>
					</div>
				</div>

				<div class="row gy-3">
					<div class="col-md-6">
						<label for="cc-name" class="form-label">Όνομα κάρτας</label>
						<input type="text" class="form-control" id="cc-name" placeholder="" required>
						<small class="text-muted">Το όνομα όπως απεικονίζεται στην κάρτα</small>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-md-6">
						<label for="cc-number" class="form-label">Αριθμός κάρτας</label>
						<input type="text" class="form-control" id="cc-number" placeholder="" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-md-3">
						<label for="cc-expiration" class="form-label">Ημ/νία λήξης</label>
						<input type="text" class="form-control" id="cc-expiration" placeholder="" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>

					<div class="col-md-3">
						<label for="cc-cvv" class="form-label">CVV</label>
						<input type="text" class="form-control" id="cc-cvv" placeholder="" required>
						<div class="valid-feedback">
							Φαίνεται σωστό!
						</div>
					</div>
				</div>

			</div>
		</div>
	</form>
</div>

</br>
<% include ./partials/header %>

<% if(currentUser) {%>
  <% if(currentUser.userType === "student"){ %>
    <% include ./partials/studentNav %>
  <% } else if(currentUser.userType === "provider"){ %>
    <% include ./partials/providerNav %>
  <% } %>
<%} else { %>
  <% include ./partials/indexNav %>
<% } %>

<div class="row path">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb arr-right">
        <li class="breadcrumb-item"><a href="/">Αρχική Σελίδα</a></li>
        <li class="breadcrumb-item active" aria-current="page">Αναζήτηση</li>
      </ol>
    </nav>
</div>


  <div class="titles">
    <h4>Πλήθος αποτελεσμάτων: <b><%= results %></b></h4>
  </div>
        <div class="container">
            <% if(books.length >0) { %>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="text-center"><b>Βιβλία</b></h4>
                        </div>
                        <div class="card-body">
                          <table class="table table-striped">
                              <thead>
                                <th scope="col">Τίτλος</th>
                              	<th scope="col">Συγγραφέας</th>
                              	<th scope="col">ISBN</th>
                              </thead>
                              <tbody>
                                  <% books.forEach(function(book){ %>
                                      <tr>
                                        <td><%= book.title %></td>
                                        <td><%= book.author %></td>
                                        <td><%= book.isbn %></td>
                                      </tr>
                                  <% }); %>
                              </tbody>
                          </table>
                        </div>
                    </div>
                </div>
            </div>

          <% } %>

<% if(dis.length >0) { %>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="text-center"><b>Σημεία διανομής</b></h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                  <th scope="col">Νομός</th>
                                  <th scope="col">Πόλη</th>
                                  <th scope="col">Τ.Κ.</th>
                                  <th scope="col">Διεύθυνση</th>
                                </thead>
                                <tbody>
                                    <% dis.forEach(function(dis){ %>
                                        <tr>
                                          <td><%= dis.county %></td>
                                          <td><%= dis.city %></td>
                                          <td><%= dis.zip %></td>
                                          <td><%= dis.address %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

<% } %>

<% if(users.length >0) { %>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="text-center"><b>Εκδότες</b></h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                  <th scope="col">Όνομα</th>
                                  <th scope="col">Επώνυμο</th>
                                  <th scope="col">Τηλέφωνο</th>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user){ %>
                                        <tr>
                                          <td><%= user.firstname %></td>
                                          <td><%= user.lastname %></td>
                                          <td><%= user.tel %></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

<% } %>

<strong><a href="javascript:history.back()">Πίσω</a></strong>
</div>
<% include ./partials/footer %>
